@model WelcomeToEduhome

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="about-content">
                <h2>@Html.Raw(Model.Title)</h2>
                @Html.Raw(Model.Description)
                <a class="default-btn" asp-controller="About" asp-action="Index">view courses</a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6">
            <div class="about-img">
                <img src="~/img/@Model.WelcomeToEduhomeImageName" alt="about">
            </div>
        </div>
    </div>
</div>
