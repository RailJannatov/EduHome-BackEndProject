@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.BlogTitle</h4>
                <p>@Model.Author</p>
                <p>
                    <img src="~/img/@Model.BlogImageName" style="width:150px;height:150px" />
                </p>
                <span style="color:red"> Are you suree brooo?</span>
            </div>
        </div>
    </div>

    <form method="post">
        <a class="btn btn-primary" asp-action="Index">Go Back</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

